{
  "name": "ServerJockey Extension",
  "description": "A browser extension for the ServerJockey game server management system.",
  "version": "0.6.0",
  "manifest_version": 3,
  "permissions": ["tabs", "activeTab", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
